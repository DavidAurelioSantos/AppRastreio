<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@id/tela"
        android:layout_width="396dp"
        android:layout_height="305dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0215bb"
            android:text="My Application"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:textColor="@color/colorPrimary"
            android:visibility="visible" />

        <EditText
            android:id="@+id/campoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="David"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/botaoTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clicaTost"
            android:text="Mensagem Toast"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/botaoCorFundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mude a cor do fundo" />

        <Button
            android:id="@+id/botaoCorLetra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mude a cor da letra do Text" />

        <Button
            android:id="@+id/botaoCorPadrao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar ao Padrao" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>